<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.giangnb.pc_covid_clone">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.PCCovidClone">

        <activity android:name=".features.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity android:name=".features.login.LoginActivity"/>
        <activity android:name=".features.login.signup.RegisterRemoteActivity"/>
        <activity android:name=".features.login.signup.RegisterLocalActivity"/>
        <activity android:name=".features.login.signin.LoginLocalActivity"/>
        <activity android:name=".features.login.signin.LoginRemoteActivity"/>

        <activity android:name=".features.home.MainActivity"/>
    </application>

</manifest>